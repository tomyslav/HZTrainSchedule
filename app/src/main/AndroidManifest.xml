<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.example.hzvoznired.hzvoznired"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".HZSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".MainHzActivity"
            android:label="@string/app_name">
        </activity>
        <activity
            android:name=".DirectionActivity"
            android:label="@string/title_activity_direction">
        </activity>
        <activity
            android:name=".FinalDataActivity"
            android:label="@string/title_activity_final_data">
        </activity>
        <activity
            android:name=".TrainScheduleActivity"
            android:label="@string/title_activity_vozni_red">
        </activity>
        <activity
            android:name=".TrainScheduleResultActivity"
            android:label="@string/title_activity_vozni_red_data">
        </activity>
        <activity android:name=".WhereIsTrain">
        </activity>
        <activity android:name=".SelectServiceActivity">
        </activity>
    </application>

</manifest>